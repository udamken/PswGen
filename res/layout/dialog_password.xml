<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp" >

	<TextView android:id="@+id/label_password"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/label_password"
	    android:textIsSelectable="false" />
	
	<TextView android:id="@+id/password"
	    style="?android:attr/textAppearanceSmall"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textIsSelectable="true" />
	
	<TextView android:id="@+id/label_password_explanation"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/label_password_explanation"
	    android:textIsSelectable="false" />
	
		<TextView android:id="@+id/password_explanation"
	    style="?android:attr/textAppearanceSmall"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textIsSelectable="false" />
	
</LinearLayout>
