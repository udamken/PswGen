<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.StartupFragment"
    tools:ignore="Autofill"
    >

    <TextView
        android:id="@+id/labelPassphrase"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_passphrase"
        android:textIsSelectable="false"
        android:labelFor="@+id/passphrase"
        />

    <EditText
        android:id="@+id/passphrase"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/labelOldPassphrase"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_old_passphrase"
        android:textIsSelectable="false"
        android:labelFor="@+id/oldPassphrase"
        />

    <EditText
        android:id="@+id/oldPassphrase"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/labelFilepath"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_filepath"
        android:textIsSelectable="false"
        android:labelFor="@+id/filepath"
        />

    <EditText
        android:id="@+id/filepath"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        />

    <TextView
        android:id="@+id/labelOtherFilepath"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_other_filepath"
        android:textIsSelectable="false"
        android:labelFor="@+id/otherFilepath"
        />

    <EditText
        android:id="@+id/otherFilepath"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        />

    <Button
        android:id="@+id/buttonOpenServices"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_open_services"
        />

    <Button
        android:id="@+id/buttonOpenImeSettings"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_open_ime_settings"
        />

    <Button
        android:id="@+id/buttonOpenHelp"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_open_help"
        />

    <Button
        android:id="@+id/buttonOpenAbout"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_open_about"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
