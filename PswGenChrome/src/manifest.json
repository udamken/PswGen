{
	"manifest_version" : 2,

	"name" : "PswGenChrome",
	"version" : "1.0.0",
	"browser_action" : {
		"default_icon" : "icon38.png",
		"default_popup" : "popup.html"
	},
	"commands" : {
		"_execute_browser_action" : {
			"suggested_key" : {
				"windows" : "Ctrl+Shift+S",
				"mac" : "Command+Shift+S",
				"chromeos" : "Ctrl+Shift+S",
				"linux" : "Ctrl+Shift+S"
			}
		}
	},
	"content_scripts" : [
		{
			"matches" : [
				"<all_urls>"
			],
			"js" : [
				"content.js"
			]
		}
	],
	"permissions" : [
		"storage",
		"tabs"
	],
	"options_page" : "options.html"
}
